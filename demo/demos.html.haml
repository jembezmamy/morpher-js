        var canvas = document.createElement("canvas");
        canvas.width = 234;
        canvas.height = 317;
        var ctx = canvas.getContext("2d");
        ctx.arc(117, 159, 50, 0, 2 * Math.PI);
        ctx.fill();
        image3.setImage(canvas);
        morpher.addImage(image3);


