        var normalizeFactors = function() {
          var normalized = [];
          var total = factors.reduce(function(a,b){ return a + b; });
          var gain = (1 - Math.min(total, 1)) / factors.length;

          for(var i = 0; i < factors.length; i++ ) {
            normalized[i] = factors[i] / Math.max(total, 1) + gain;
          }

          return normalized;
        }

      })
